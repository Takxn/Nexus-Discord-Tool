{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Nexus Discord Tool",
  "version": "1.3.0",
  "identifier": "com.nexus.discord-tool",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Nexus Discord Tool",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "maximizable": true,
        "minimizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": {
      "../bot": "bot"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Nexus+",
    "copyright": "Â© 2026 Nexus+",
    "category": "Utility",
    "shortDescription": "Discord Bot Management Tool",
    "longDescription": "Nexus Discord Tool - A comprehensive tool for managing your Discord bot with Dashboard, Embed Builder, Settings and more.",
    "windows": {
      "wix": {
        "language": "de-DE"
      },
      "nsis": {
        "installMode": "currentUser",
        "displayLanguageSelector": true,
        "languages": ["German", "English"]
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13",
      "signingIdentity": null,
      "frameworks": [],
      "entitlements": null
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "depends": []
      }
    }
  }
}
